{
  "mcpServers": {
    "airbyte-widget": {
      "type": "stdio",
      "command": "node",
      "args": ["widget-mcp-server/dist/server.mjs"],
      "env": {
        "AC_AIRBYTE_CLIENT_ID": "${AC_AIRBYTE_CLIENT_ID}",
        "AC_AIRBYTE_CLIENT_SECRET": "${AC_AIRBYTE_CLIENT_SECRET}",
        "AC_EXTERNAL_USER_ID": "${AC_EXTERNAL_USER_ID}"
      }
    }
  }
}
